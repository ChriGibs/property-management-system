{
  "name": "property-management-app",
  "version": "1.0.0",
  "description": "Lightweight property management app for rental properties",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seedInvoices.js",
    "lint": "eslint . --ext .js",
    "test": "NODE_ENV=test TEST_DATABASE_URL=${TEST_DATABASE_URL:-postgres://postgres:password@localhost:5434/property_mgmt_test} node --test --test-reporter=spec --test-concurrency=1",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "@sentry/node": "^10.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "sequelize": "^6.35.0",
    "stripe": "^14.7.0",
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "property-management",
    "rental",
    "node.js",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
