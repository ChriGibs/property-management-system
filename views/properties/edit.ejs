<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Property Management</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        
        .sidebar .nav-link {
            color: #333;
        }
        
        .sidebar .nav-link:hover {
            color: #0d6efd;
        }
        
        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }
        
        .main-content {
            padding-left: 0;
        }
        
        @media (min-width: 768px) {
            .main-content {
                padding-left: 250px;
            }
        }
        
        .autocomplete-suggestions {
            border: 1px solid #ddd;
            border-top: none;
            background: white;
            max-height: 200px;
            overflow-y: auto;
            position: absolute;
            width: 100%;
            z-index: 1000;
        }
        
        .autocomplete-suggestion {
            padding: 10px;
            cursor: pointer;
        }
        
        .autocomplete-suggestion:hover {
            background-color: #f8f9fa;
        }
        
        .form-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .danger-zone {
            background: #fff5f5;
            border: 1px solid #fed7d7;
            border-radius: 8px;
            padding: 20px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-building"></i> Property Management
            </a>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/auth/logout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse position-fixed">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/properties">
                                <i class="bi bi-building"></i> Properties
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/tenants">
                                <i class="bi bi-people"></i> Tenants
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/leases">
                                <i class="bi bi-file-text"></i> Leases
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/invoices">
                                <i class="bi bi-receipt"></i> Invoices
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/payments">
                                <i class="bi bi-credit-card"></i> Payments
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <!-- Main content -->
    <main class="main-content">
        <div class="container-fluid px-4 py-3">
            <!-- Flash messages -->
            <% if (messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            
            <% if (messages.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Page Header -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-pencil-square"></i> Edit Property
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="/properties/<%= property.id %>" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Property
                    </a>
                </div>
            </div>

            <!-- Property Form -->
            <div class="row">
                <div class="col-lg-8">
                    <form action="/properties/<%= property.id %>?_method=PUT" method="POST" id="propertyForm">
                        <!-- Basic Information -->
                        <div class="form-section">
                            <h4 class="mb-3">
                                <i class="bi bi-info-circle"></i> Basic Information
                            </h4>
                            
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Property Name *</label>
                                        <input type="text" class="form-control" id="name" name="name" 
                                               value="<%= property.name %>" required>
                                        <div class="form-text">A friendly name to identify this property</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="propertyType" class="form-label">Property Type</label>
                                        <select class="form-select" id="propertyType" name="propertyType">
                                            <option value="single-family" <%= property.propertyType === 'single-family' ? 'selected' : '' %>>Single Family</option>
                                            <option value="apartment" <%= property.propertyType === 'apartment' ? 'selected' : '' %>>Apartment</option>
                                            <option value="condo" <%= property.propertyType === 'condo' ? 'selected' : '' %>>Condo</option>
                                            <option value="townhouse" <%= property.propertyType === 'townhouse' ? 'selected' : '' %>>Townhouse</option>
                                            <option value="duplex" <%= property.propertyType === 'duplex' ? 'selected' : '' %>>Duplex</option>
                                            <option value="other" <%= property.propertyType === 'other' ? 'selected' : '' %>>Other</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Address Information -->
                        <div class="form-section">
                            <h4 class="mb-3">
                                <i class="bi bi-geo-alt"></i> Address Information
                            </h4>
                            
                            <div class="mb-3 position-relative">
                                <label for="address" class="form-label">Street Address *</label>
                                <input type="text" class="form-control" id="address" name="address" 
                                       value="<%= property.address %>" required>
                                <div id="addressSuggestions" class="autocomplete-suggestions" style="display: none;"></div>
                                <div class="form-text">
                                    <i class="bi bi-lightbulb"></i> Start typing for address suggestions
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="city" class="form-label">City *</label>
                                        <input type="text" class="form-control" id="city" name="city" 
                                               value="<%= property.city %>" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="state" class="form-label">State *</label>
                                        <input type="text" class="form-control" id="state" name="state" 
                                               value="<%= property.state %>" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="zipCode" class="form-label">ZIP Code *</label>
                                        <input type="text" class="form-control" id="zipCode" name="zipCode" 
                                               value="<%= property.zipCode %>" pattern="[0-9]{5}(-[0-9]{4})?" required>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="mb-3">
                                        <label for="county" class="form-label">County</label>
                                        <input type="text" class="form-control" id="county" name="county" 
                                               value="<%= property.county || '' %>">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Property Details -->
                        <div class="form-section">
                            <h4 class="mb-3">
                                <i class="bi bi-house"></i> Property Details
                            </h4>
                            
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="bedrooms" class="form-label">Bedrooms</label>
                                        <input type="number" class="form-control" id="bedrooms" name="bedrooms" 
                                               min="0" max="20" value="<%= property.bedrooms %>">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label for="bathrooms" class="form-label">Bathrooms</label>
                                        <input type="number" class="form-control" id="bathrooms" name="bathrooms" 
                                               min="0" max="20" step="0.5" value="<%= property.bathrooms %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="squareFootage" class="form-label">Square Footage</label>
                                        <input type="number" class="form-control" id="squareFootage" name="squareFootage" 
                                               min="0" value="<%= property.squareFootage || '' %>">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"><%= property.description || '' %></textarea>
                            </div>
                        </div>

                        <!-- Financial Information -->
                        <div class="form-section">
                            <h4 class="mb-3">
                                <i class="bi bi-currency-dollar"></i> Financial Information
                            </h4>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="purchasePrice" class="form-label">Purchase Price</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" id="purchasePrice" name="purchasePrice" 
                                                   min="0" step="0.01" value="<%= property.purchasePrice || '' %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="purchaseDate" class="form-label">Purchase Date</label>
                                        <input type="date" class="form-control" id="purchaseDate" name="purchaseDate" 
                                               value="<%= property.purchaseDate ? property.purchaseDate.toISOString().split('T')[0] : '' %>">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="currentValue" class="form-label">Current Value</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" id="currentValue" name="currentValue" 
                                                   min="0" step="0.01" value="<%= property.currentValue || '' %>">
                                            <button type="button" class="btn btn-outline-secondary" id="getZillowValue">
                                                <i class="bi bi-search"></i> Update Value
                                            </button>
                                        </div>
                                        <div class="form-text">
                                            <span id="valueSource">
                                                <% if (property.currentValueDate) { %>
                                                    Last updated: <%= new Date(property.currentValueDate).toLocaleDateString() %>
                                                <% } %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Property Status -->
                        <div class="form-section">
                            <h4 class="mb-3">
                                <i class="bi bi-toggle-on"></i> Property Status
                            </h4>
                            
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
                                       value="true" <%= property.isActive ? 'checked' : '' %>>
                                <label class="form-check-label" for="isActive">
                                    Property is Active
                                </label>
                                <div class="form-text">Inactive properties are hidden from tenant searches and reporting</div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <a href="/properties/<%= property.id %>" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle"></i> Update Property
                            </button>
                        </div>
                    </form>

                    <!-- Danger Zone -->
                    <div class="danger-zone">
                        <h5 class="text-danger">
                            <i class="bi bi-exclamation-triangle"></i> Danger Zone
                        </h5>
                        <p class="text-muted mb-3">
                            Deleting a property is permanent and cannot be undone. Make sure there are no active leases before deleting.
                        </p>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Delete Property
                        </button>
                    </div>
                </div>

                <!-- Help Panel -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-question-circle"></i> Edit Help
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6>Property Status</h6>
                            <p class="small">Use the Active toggle to temporarily hide properties without deleting them. Inactive properties won't appear in tenant searches.</p>
                            
                            <h6>Current Value Updates</h6>
                            <p class="small">Click "Update Value" to fetch a new market estimate. The system tracks when values were last updated.</p>
                            
                            <h6>Deleting Properties</h6>
                            <p class="small">Properties with active leases cannot be deleted. You must first terminate all leases or mark them as inactive.</p>
                            
                            <h6>Address Changes</h6>
                            <p class="small">Changing the address will affect all associated leases and tenant communications. Use caution when updating this field.</p>
                        </div>
                    </div>
                    
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-clock-history"></i> Property History
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <small class="text-muted">Created</small><br>
                                <%= new Date(property.createdAt).toLocaleDateString() %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Last Updated</small><br>
                                <%= new Date(property.updatedAt).toLocaleDateString() %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Delete Property
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete "<strong><%= property.name %></strong>"?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-circle"></i> 
                        This action cannot be undone. All associated data will be permanently deleted.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/properties/<%= property.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Property
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Address Autocomplete & Property Value Integration -->
    <script>
        let addressTimeout;
        const addressInput = document.getElementById('address');
        const suggestionsDiv = document.getElementById('addressSuggestions');
        
        // Address autocomplete functionality
        addressInput.addEventListener('input', function() {
            clearTimeout(addressTimeout);
            const query = this.value.trim();
            
            if (query.length < 3) {
                suggestionsDiv.style.display = 'none';
                return;
            }
            
            addressTimeout = setTimeout(() => {
                fetchAddressSuggestions(query);
            }, 300);
        });
        
        // Fetch address suggestions
        async function fetchAddressSuggestions(query) {
            try {
                const response = await fetch(`/api/address-autocomplete?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                
                if (data.suggestions && data.suggestions.length > 0) {
                    displaySuggestions(data.suggestions);
                } else {
                    suggestionsDiv.style.display = 'none';
                }
            } catch (error) {
                console.error('Address autocomplete error:', error);
                suggestionsDiv.style.display = 'none';
            }
        }
        
        // Display address suggestions
        function displaySuggestions(suggestions) {
            suggestionsDiv.innerHTML = '';
            
            suggestions.forEach(suggestion => {
                const div = document.createElement('div');
                div.className = 'autocomplete-suggestion';
                div.textContent = suggestion.formatted_address;
                div.addEventListener('click', () => selectAddress(suggestion));
                suggestionsDiv.appendChild(div);
            });
            
            suggestionsDiv.style.display = 'block';
        }
        
        // Select an address from suggestions
        function selectAddress(suggestion) {
            document.getElementById('address').value = suggestion.street_address;
            document.getElementById('city').value = suggestion.city;
            document.getElementById('state').value = suggestion.state;
            document.getElementById('zipCode').value = suggestion.zip_code;
            document.getElementById('county').value = suggestion.county || '';
            
            suggestionsDiv.style.display = 'none';
        }
        
        // Hide suggestions when clicking outside
        document.addEventListener('click', function(e) {
            if (!addressInput.contains(e.target) && !suggestionsDiv.contains(e.target)) {
                suggestionsDiv.style.display = 'none';
            }
        });
        
        // Get current property value update
        document.getElementById('getZillowValue').addEventListener('click', async function() {
            const button = this;
            const addressValue = document.getElementById('address').value.trim();
            const cityValue = document.getElementById('city').value.trim();
            const stateValue = document.getElementById('state').value.trim();
            const zipValue = document.getElementById('zipCode').value.trim();
            
            if (!addressValue || !cityValue || !stateValue || !zipValue) {
                alert('Please fill in the complete address first');
                return;
            }
            
            button.disabled = true;
            button.innerHTML = '<i class="bi bi-hourglass-split"></i> Getting Value...';
            
            try {
                const fullAddress = `${addressValue}, ${cityValue}, ${stateValue} ${zipValue}`;
                const response = await fetch('/api/property-value', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ address: fullAddress })
                });
                
                const data = await response.json();
                
                if (data.success && data.value) {
                    document.getElementById('currentValue').value = data.value;
                    document.getElementById('valueSource').textContent = `Updated value from ${data.source} on ${new Date().toLocaleDateString()}`;
                    document.getElementById('valueSource').className = 'text-success';
                } else {
                    document.getElementById('valueSource').textContent = data.message || 'Unable to fetch property value';
                    document.getElementById('valueSource').className = 'text-warning';
                }
            } catch (error) {
                console.error('Property value error:', error);
                document.getElementById('valueSource').textContent = 'Error fetching property value';
                document.getElementById('valueSource').className = 'text-danger';
            }
            
            button.disabled = false;
            button.innerHTML = '<i class="bi bi-search"></i> Update Value';
        });
        
        // Form validation
        document.getElementById('propertyForm').addEventListener('submit', function(e) {
            const requiredFields = ['name', 'address', 'city', 'state', 'zipCode'];
            let isValid = true;
            
            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                alert('Please fill in all required fields');
            }
        });
    </script>
</body>
</html> 