<%- include('../partials/header') %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark mb-0">
      <i class="fas fa-file-invoice me-2"></i>Invoices
    </h1>
    <div class="btn-group">
      <a href="/invoices/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create Invoice
      </a>
      <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
        <i class="fas fa-filter me-2"></i>Filter
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/invoices?status=draft">Draft</a></li>
        <li><a class="dropdown-item" href="/invoices?status=sent">Sent</a></li>
        <li><a class="dropdown-item" href="/invoices?status=overdue">Overdue</a></li>
        <li><a class="dropdown-item" href="/invoices?status=paid">Paid</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/invoices">All Invoices</a></li>
      </ul>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= messages.success.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Invoices List -->
  <div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0">
        <i class="fas fa-list me-2"></i>All Invoices
        <span class="badge bg-secondary ms-2"><%= invoices.length %></span>
      </h5>
    </div>
    <div class="card-body p-0">
      <% if (invoices.length === 0) { %>
        <div class="text-center py-5">
          <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">No Invoices Found</h5>
          <p class="text-muted">Get started by creating your first invoice.</p>
          <a href="/invoices/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create First Invoice
          </a>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover mb-0" id="invoicesTable">
            <thead class="table-light">
              <tr>
                <th>Invoice #</th>
                <th>Property/Lease</th>
                <th>Amount</th>
                <th>Paid</th>
                <th>Balance</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% invoices.forEach(invoice => { %>
                <tr class="<%= invoice.balanceAmount > 0 && new Date() > new Date(invoice.dueDate) && invoice.status !== 'paid' ? 'table-warning' : '' %>">
                  <td>
                    <a href="/invoices/<%= invoice.id %>" class="text-decoration-none fw-bold">
                      <%= invoice.invoiceNumber %>
                    </a>
                    <% if (invoice.lease) { %>
                      <br><small class="text-muted">
                        <%= new Date(invoice.periodStart).toLocaleDateString() %> - 
                        <%= new Date(invoice.periodEnd).toLocaleDateString() %>
                      </small>
                    <% } %>
                  </td>
                  <td>
                    <% if (invoice.lease && invoice.lease.property) { %>
                      <div class="fw-bold">
                        <%= invoice.lease.property.name || invoice.lease.property.address %>
                      </div>
                      <small class="text-muted">
                        <% if (invoice.lease.tenant1) { %>
                          <%= invoice.lease.tenant1.getFullName() %>
                        <% } else { %>
                          No tenant assigned
                        <% } %>
                      </small>
                    <% } else { %>
                      <span class="text-muted fst-italic">No lease assigned</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="fw-bold">$<%= new Intl.NumberFormat().format(invoice.totalAmount) %></span>
                    <% if (invoice.rentAmount > 0) { %>
                      <br><small class="text-muted">Rent: $<%= new Intl.NumberFormat().format(invoice.rentAmount) %></small>
                    <% } %>
                    <% if (invoice.otherCharges > 0) { %>
                      <br><small class="text-muted">Other: $<%= new Intl.NumberFormat().format(invoice.otherCharges) %></small>
                    <% } %>
                  </td>
                  <td>
                    <span class="text-success fw-bold">$<%= new Intl.NumberFormat().format(invoice.totalPaid) %></span>
                    <% if (invoice.payments && invoice.payments.length > 0) { %>
                      <br><small class="text-muted"><%= invoice.payments.length %> payment(s)</small>
                    <% } %>
                  </td>
                  <td>
                    <% const balance = invoice.balanceAmount %>
                    <% if (balance > 0) { %>
                      <span class="text-danger fw-bold">$<%= new Intl.NumberFormat().format(balance) %></span>
                    <% } else { %>
                      <span class="text-success fw-bold">$0.00</span>
                    <% } %>
                  </td>
                  <td>
                    <%= new Date(invoice.dueDate).toLocaleDateString() %>
                    <% if (invoice.balanceAmount > 0 && new Date() > new Date(invoice.dueDate) && invoice.status !== 'paid') { %>
                      <br><small class="text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Overdue
                      </small>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge bg-<%= 
                      invoice.status === 'paid' ? 'success' : 
                      invoice.status === 'sent' ? 'primary' : 
                      invoice.status === 'overdue' ? 'danger' : 
                      invoice.status === 'partially_paid' ? 'warning' : 
                      'secondary' 
                    %>">
                      <%= invoice.status.replace('_', ' ').toUpperCase() %>
                    </span>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Actions
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <a class="dropdown-item" href="/invoices/<%= invoice.id %>">
                            <i class="fas fa-eye me-2"></i>View Details
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="/invoices/<%= invoice.id %>/edit">
                            <i class="fas fa-edit me-2"></i>Edit
                          </a>
                        </li>
                        <% if (invoice.status !== 'paid' && invoice.balanceAmount > 0) { %>
                          <li>
                            <a class="dropdown-item" href="/payments/new?invoice=<%= invoice.id %>">
                              <i class="fas fa-credit-card me-2"></i>Record Payment
                            </a>
                          </li>
                        <% } %>
                        <% if (invoice.status === 'draft') { %>
                          <li><hr class="dropdown-divider"></li>
                          <li>
                            <form action="/invoices/<%= invoice.id %>/send" method="POST" style="display: inline;">
                              <button type="submit" class="dropdown-item">
                                <i class="fas fa-paper-plane me-2"></i>Send Invoice
                              </button>
                            </form>
                          </li>
                        <% } %>
                        <% if (invoice.status !== 'paid' && invoice.balanceAmount > 0) { %>
                          <li>
                            <form action="/invoices/<%= invoice.id %>/mark-paid" method="POST" style="display: inline;">
                              <button type="submit" class="dropdown-item">
                                <i class="fas fa-check-circle me-2"></i>Mark as Paid
                              </button>
                            </form>
                          </li>
                        <% } %>
                        <% if (invoice.payments.length === 0) { %>
                          <li><hr class="dropdown-divider"></li>
                          <li>
                            <button class="dropdown-item text-danger" onclick="confirmDelete('<%= invoice.id %>', '<%= invoice.invoiceNumber %>')">
                              <i class="fas fa-trash me-2"></i>Delete
                            </button>
                          </li>
                        <% } %>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Summary Cards -->
  <% if (invoices.length > 0) { %>
    <div class="row mt-4">
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-primary">Total Invoiced</h5>
            <h3 class="text-primary">
              $<%= new Intl.NumberFormat().format(
                invoices.reduce((sum, inv) => sum + inv.totalAmount, 0)
              ) %>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-success">Total Paid</h5>
            <h3 class="text-success">
              $<%= new Intl.NumberFormat().format(
                invoices.reduce((sum, inv) => sum + inv.totalPaid, 0)
              ) %>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-warning">Outstanding</h5>
            <h3 class="text-warning">
              $<%= new Intl.NumberFormat().format(
                invoices.reduce((sum, inv) => sum + inv.balanceAmount, 0)
              ) %>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-danger">Overdue</h5>
            <h3 class="text-danger">
              $<%= new Intl.NumberFormat().format(
                invoices
                  .filter(inv => inv.balanceAmount > 0 && new Date() > new Date(inv.dueDate) && inv.status !== 'paid')
                  .reduce((sum, inv) => sum + inv.balanceAmount, 0)
              ) %>
            </h3>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete invoice <strong id="deleteInvoiceNumber"></strong>?</p>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          This action cannot be undone. The invoice will be permanently removed.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete Invoice
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
// Initialize DataTable
document.addEventListener('DOMContentLoaded', function() {
  if (document.getElementById('invoicesTable')) {
    $('#invoicesTable').DataTable({
      pageLength: 25,
      order: [[5, 'desc']], // Sort by due date descending
      columnDefs: [
        { orderable: false, targets: [7] } // Disable sorting on actions column
      ],
      language: {
        search: "Search invoices:",
        lengthMenu: "Show _MENU_ invoices per page",
        info: "Showing _START_ to _END_ of _TOTAL_ invoices"
      }
    });
  }
});

function confirmDelete(invoiceId, invoiceNumber) {
  document.getElementById('deleteInvoiceNumber').textContent = invoiceNumber;
  document.getElementById('deleteForm').action = `/invoices/${invoiceId}`;
  new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>

<%- include('../partials/footer') %> 