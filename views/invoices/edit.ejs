<%- include('../partials/header') %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark mb-0">
      <i class="fas fa-edit me-2"></i>Edit Invoice <%= invoice.invoiceNumber %>
    </h1>
    <div class="btn-group">
      <a href="/invoices/<%= invoice.id %>" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Details
      </a>
      <a href="/invoices" class="btn btn-outline-primary">
        <i class="fas fa-list me-2"></i>All Invoices
      </a>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Invoice Form -->
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Edit Invoice Details
          </h5>
        </div>
        <div class="card-body">
          <form action="/invoices/<%= invoice.id %>" method="POST" id="invoiceForm">
            <input type="hidden" name="_method" value="PUT">
            
            <!-- Lease Selection -->
            <div class="row">
              <div class="col-md-12 mb-4">
                <label for="leaseId" class="form-label">Associated Lease (Optional)</label>
                <select class="form-select" id="leaseId" name="leaseId">
                  <option value="">No lease - General invoice</option>
                  <% leases.forEach(lease => { %>
                    <option value="<%= lease.id %>" 
                            <%= lease.id == invoice.leaseId ? 'selected' : '' %>
                            data-monthly-rent="<%= lease.monthlyRent %>"
                            data-due-day="<%= lease.rentDueDay %>">
                      <% if (lease.property) { %>
                        <%= lease.property.name || lease.property.address %> - 
                        <%= lease.property.city %>, <%= lease.property.state %>
                      <% } %>
                      <% if (lease.tenant1) { %>
                        (<%= lease.tenant1.getFullName() %>)
                      <% } %>
                    </option>
                  <% }) %>
                </select>
                <div class="form-text">Change lease association or set to general invoice</div>
              </div>
            </div>

            <!-- Invoice Dates -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-calendar me-2"></i>Invoice Dates
            </h6>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="invoiceDate" class="form-label">Invoice Date <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="invoiceDate" name="invoiceDate" 
                       value="<%= new Date(invoice.invoiceDate).toISOString().split('T')[0] %>" required>
              </div>
              <div class="col-md-4 mb-3">
                <label for="dueDate" class="form-label">Due Date <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="dueDate" name="dueDate" 
                       value="<%= new Date(invoice.dueDate).toISOString().split('T')[0] %>" required>
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label">Auto-set Due Date</label>
                <div class="btn-group w-100" role="group">
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDueDate(7)">+7 days</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDueDate(15)">+15 days</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDueDate(30)">+30 days</button>
                </div>
              </div>
            </div>

            <!-- Billing Period -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="periodStart" class="form-label">Billing Period Start</label>
                <input type="date" class="form-control" id="periodStart" name="periodStart"
                       value="<%= invoice.periodStart ? new Date(invoice.periodStart).toISOString().split('T')[0] : '' %>">
                <div class="form-text">Leave blank for non-recurring charges</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="periodEnd" class="form-label">Billing Period End</label>
                <input type="date" class="form-control" id="periodEnd" name="periodEnd"
                       value="<%= invoice.periodEnd ? new Date(invoice.periodEnd).toISOString().split('T')[0] : '' %>">
              </div>
            </div>

            <!-- Charges -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-dollar-sign me-2"></i>Charges
            </h6>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="rentAmount" class="form-label">Rent Amount</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="rentAmount" name="rentAmount" 
                         value="<%= invoice.rentAmount || '' %>" placeholder="0.00" step="0.01" min="0">
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <label for="lateFeeAmount" class="form-label">Late Fee</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="lateFeeAmount" name="lateFeeAmount" 
                         value="<%= invoice.lateFeeAmount || '' %>" placeholder="0.00" step="0.01" min="0">
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <label for="otherCharges" class="form-label">Other Charges</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="otherCharges" name="otherCharges" 
                         value="<%= invoice.otherCharges || '' %>" placeholder="0.00" step="0.01" min="0">
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="otherChargesDescription" class="form-label">Other Charges Description</label>
                <input type="text" class="form-control" id="otherChargesDescription" name="otherChargesDescription" 
                       value="<%= invoice.otherChargesDescription || '' %>" placeholder="e.g., Pet fee, Parking, Utilities">
              </div>
            </div>

            <!-- Total Calculation -->
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title">
                      <i class="fas fa-calculator me-2"></i>Invoice Total
                    </h6>
                    <div class="row">
                      <div class="col-md-3">
                        <strong>Rent:</strong>
                        <div class="h5 text-info" id="displayRent">$<%= new Intl.NumberFormat().format(invoice.rentAmount || 0) %></div>
                      </div>
                      <div class="col-md-3">
                        <strong>Late Fee:</strong>
                        <div class="h5 text-warning" id="displayLateFee">$<%= new Intl.NumberFormat().format(invoice.lateFeeAmount || 0) %></div>
                      </div>
                      <div class="col-md-3">
                        <strong>Other Charges:</strong>
                        <div class="h5 text-secondary" id="displayOther">$<%= new Intl.NumberFormat().format(invoice.otherCharges || 0) %></div>
                      </div>
                      <div class="col-md-3">
                        <strong>Total Amount:</strong>
                        <div class="h4 text-primary" id="displayTotal">$<%= new Intl.NumberFormat().format(invoice.totalAmount) %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Status -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-flag me-2"></i>Invoice Status
            </h6>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                  <option value="draft" <%= invoice.status === 'draft' ? 'selected' : '' %>>Draft</option>
                  <option value="sent" <%= invoice.status === 'sent' ? 'selected' : '' %>>Sent</option>
                  <option value="paid" <%= invoice.status === 'paid' ? 'selected' : '' %>>Paid</option>
                  <option value="partially_paid" <%= invoice.status === 'partially_paid' ? 'selected' : '' %>>Partially Paid</option>
                  <option value="overdue" <%= invoice.status === 'overdue' ? 'selected' : '' %>>Overdue</option>
                  <option value="cancelled" <%= invoice.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  <strong>Current Status:</strong> <%= invoice.status.replace('_', ' ').toUpperCase() %>
                  <% if (invoice.sentDate) { %>
                    <br><small>Sent: <%= new Date(invoice.sentDate).toLocaleDateString() %></small>
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Notes -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-sticky-note me-2"></i>Additional Information
            </h6>

            <div class="mb-3">
              <label for="notes" class="form-label">Notes</label>
              <textarea class="form-control" id="notes" name="notes" rows="4" 
                        placeholder="Any additional notes or terms for this invoice..."><%= invoice.notes || '' %></textarea>
            </div>

            <!-- Warning for existing payments -->
            <% if (invoice.payments && invoice.payments.length > 0) { %>
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> This invoice has <%= invoice.payments.length %> payment(s) totaling 
                $<%= new Intl.NumberFormat().format(invoice.totalPaid || 0) %>. 
                Changing amounts may affect payment calculations.
              </div>
            <% } %>

            <!-- Form Actions -->
            <hr class="my-4">
            <div class="d-flex justify-content-between">
              <div>
                <a href="/invoices/<%= invoice.id %>" class="btn btn-outline-secondary">
                  <i class="fas fa-times me-2"></i>Cancel
                </a>
                <a href="/invoices" class="btn btn-outline-primary ms-2">
                  <i class="fas fa-list me-2"></i>All Invoices
                </a>
              </div>
              <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i>Update Invoice
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('invoiceForm');
  const leaseSelect = document.getElementById('leaseId');
  const rentAmountInput = document.getElementById('rentAmount');
  const lateFeeInput = document.getElementById('lateFeeAmount');
  const otherChargesInput = document.getElementById('otherCharges');
  const dueDateInput = document.getElementById('dueDate');
  const periodStartInput = document.getElementById('periodStart');
  const periodEndInput = document.getElementById('periodEnd');

  // Auto-populate based on lease selection
  leaseSelect.addEventListener('change', function() {
    const selectedOption = this.options[this.selectedIndex];
    
    if (selectedOption.value && confirm('Auto-populate rent amount from selected lease?')) {
      const monthlyRent = selectedOption.dataset.monthlyRent;
      
      if (monthlyRent) {
        rentAmountInput.value = monthlyRent;
      }
      
      calculateTotal();
    }
  });

  // Calculate total when amounts change
  [rentAmountInput, lateFeeInput, otherChargesInput].forEach(input => {
    input.addEventListener('input', calculateTotal);
  });

  // Initial calculation
  calculateTotal();

  function calculateTotal() {
    const rent = parseFloat(rentAmountInput.value) || 0;
    const lateFee = parseFloat(lateFeeInput.value) || 0;
    const other = parseFloat(otherChargesInput.value) || 0;
    const total = rent + lateFee + other;

    document.getElementById('displayRent').textContent = `$${rent.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
    document.getElementById('displayLateFee').textContent = `$${lateFee.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
    document.getElementById('displayOther').textContent = `$${other.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
    document.getElementById('displayTotal').textContent = `$${total.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
  }

  // Form submission
  form.addEventListener('submit', function(e) {
    const total = parseFloat(rentAmountInput.value || 0) + 
                  parseFloat(lateFeeInput.value || 0) + 
                  parseFloat(otherChargesInput.value || 0);

    if (total <= 0) {
      e.preventDefault();
      alert('Please enter at least one charge amount greater than $0.');
      return;
    }

    // Show loading state
    const submitBtn = form.querySelector('button[type="submit"]');
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating Invoice...';
    submitBtn.disabled = true;
  });

  // Global functions for buttons
  window.setDueDate = function(days) {
    const invoiceDate = new Date(document.getElementById('invoiceDate').value);
    const dueDate = new Date(invoiceDate);
    dueDate.setDate(dueDate.getDate() + days);
    dueDateInput.value = dueDate.toISOString().split('T')[0];
  };
});
</script>

<%- include('../partials/footer') %> 