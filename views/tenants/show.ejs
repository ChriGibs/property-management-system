<%- include('../partials/header') %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark mb-0">
      <i class="fas fa-user me-2"></i><%= tenant.getFullName() %>
    </h1>
    <div class="btn-group">
      <a href="/tenants" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Tenants
      </a>
      <a href="/tenants/<%= tenant.id %>/edit" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Edit Tenant
      </a>
      <button class="btn btn-outline-danger" onclick="confirmDelete()">
        <i class="fas fa-trash me-2"></i>Delete
      </button>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= messages.success.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <div class="row">
    <!-- Tenant Information -->
    <div class="col-lg-4">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Personal Information
          </h5>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <div class="avatar-circle bg-primary text-white mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
              <%= tenant.firstName.charAt(0) + tenant.lastName.charAt(0) %>
            </div>
            <h4 class="mb-1"><%= tenant.getFullName() %></h4>
            <span class="badge <%= tenant.isActive ? 'bg-success' : 'bg-secondary' %>">
              <%= tenant.isActive ? 'Active' : 'Inactive' %>
            </span>
          </div>

          <div class="mb-3">
            <strong class="text-muted">Email:</strong><br>
            <a href="mailto:<%= tenant.email %>" class="text-decoration-none">
              <%= tenant.email %>
            </a>
          </div>

          <% if (tenant.phone) { %>
            <div class="mb-3">
              <strong class="text-muted">Phone:</strong><br>
              <a href="tel:<%= tenant.phone %>" class="text-decoration-none">
                <%= tenant.phone %>
              </a>
            </div>
          <% } %>

          <div class="mb-3">
            <strong class="text-muted">Member Since:</strong><br>
            <%= new Date(tenant.createdAt).toLocaleDateString() %>
          </div>

          <% if (tenant.lastLoginAt) { %>
            <div class="mb-3">
              <strong class="text-muted">Last Login:</strong><br>
              <%= new Date(tenant.lastLoginAt).toLocaleDateString() %>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Employment Information -->
      <% if (tenant.employerName || tenant.monthlyIncome) { %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-briefcase me-2"></i>Employment
            </h5>
          </div>
          <div class="card-body">
            <% if (tenant.employerName) { %>
              <div class="mb-3">
                <strong class="text-muted">Employer:</strong><br>
                <%= tenant.employerName %>
              </div>
            <% } %>

            <% if (tenant.monthlyIncome) { %>
              <div class="mb-3">
                <strong class="text-muted">Monthly Income:</strong><br>
                $<%= new Intl.NumberFormat().format(tenant.monthlyIncome) %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

      <!-- Emergency Contact -->
      <% if (tenant.emergencyContactName || tenant.emergencyContactPhone) { %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-phone me-2"></i>Emergency Contact
            </h5>
          </div>
          <div class="card-body">
            <% if (tenant.emergencyContactName) { %>
              <div class="mb-3">
                <strong class="text-muted">Contact Name:</strong><br>
                <%= tenant.emergencyContactName %>
              </div>
            <% } %>

            <% if (tenant.emergencyContactPhone) { %>
              <div class="mb-3">
                <strong class="text-muted">Contact Phone:</strong><br>
                <a href="tel:<%= tenant.emergencyContactPhone %>" class="text-decoration-none">
                  <%= tenant.emergencyContactPhone %>
                </a>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Leases and Activity -->
    <div class="col-lg-8">
      <!-- Lease History -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-file-contract me-2"></i>Lease History
            <span class="badge bg-secondary ms-2">
              <%= tenant.leases ? tenant.leases.length : 0 %>
            </span>
          </h5>
        </div>
        <div class="card-body">
          <% if (tenant.leases && tenant.leases.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Property</th>
                    <th>Period</th>
                    <th>Monthly Rent</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% tenant.leases.forEach(lease => { %>
                    <tr>
                      <td>
                        <% if (lease.property) { %>
                          <a href="/properties/<%= lease.property.id %>" class="text-decoration-none">
                            <%= lease.property.name || lease.property.address %>
                          </a>
                        <% } else { %>
                          <span class="text-muted">Unknown Property</span>
                        <% } %>
                      </td>
                      <td>
                        <small>
                          <%= new Date(lease.startDate).toLocaleDateString() %> - 
                          <%= new Date(lease.endDate).toLocaleDateString() %>
                        </small>
                      </td>
                      <td>
                        $<%= new Intl.NumberFormat().format(lease.monthlyRent) %>
                      </td>
                      <td>
                        <span class="badge bg-<%= lease.status === 'active' ? 'success' : 
                                                 lease.status === 'pending' ? 'warning' : 
                                                 lease.status === 'expired' ? 'secondary' : 'danger' %>">
                          <%= lease.status.charAt(0).toUpperCase() + lease.status.slice(1) %>
                        </span>
                      </td>
                      <td>
                        <a href="/leases/<%= lease.id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fas fa-file-contract text-muted" style="font-size: 3rem;"></i>
              <h5 class="text-muted mt-3">No Leases Found</h5>
              <p class="text-muted">This tenant has no lease history.</p>
              <a href="/leases/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create New Lease
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-tools me-2"></i>Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <a href="/leases/new?tenant=<%= tenant.id %>" class="btn btn-outline-primary w-100">
                <i class="fas fa-file-contract me-2"></i>Create New Lease
              </a>
            </div>
            <div class="col-md-6 mb-3">
              <a href="mailto:<%= tenant.email %>" class="btn btn-outline-success w-100">
                <i class="fas fa-envelope me-2"></i>Send Email
              </a>
            </div>
            <% if (tenant.phone) { %>
              <div class="col-md-6 mb-3">
                <a href="tel:<%= tenant.phone %>" class="btn btn-outline-info w-100">
                  <i class="fas fa-phone me-2"></i>Call Tenant
                </a>
              </div>
            <% } %>
            <div class="col-md-6 mb-3">
              <a href="/tenants/<%= tenant.id %>/edit" class="btn btn-outline-warning w-100">
                <i class="fas fa-edit me-2"></i>Edit Information
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete <strong><%= tenant.getFullName() %></strong>?</p>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          This action cannot be undone. The tenant will be permanently removed from the system.
        </div>
        <% if (tenant.leases && tenant.leases.length > 0) { %>
          <div class="alert alert-danger">
            <i class="fas fa-ban me-2"></i>
            This tenant has lease history. Deleting may affect related records.
          </div>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/tenants/<%= tenant.id %>" method="POST" style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete Tenant
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
.avatar-circle {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
</style>

<script>
function confirmDelete() {
  new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>

<%- include('../partials/footer') %> 