<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Property Management</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        
        .sidebar .nav-link {
            color: #333;
        }
        
        .sidebar .nav-link:hover {
            color: #0d6efd;
        }
        
        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }
        
        .main-content {
            padding-left: 0;
        }
        
        @media (min-width: 768px) {
            .main-content {
                padding-left: 250px;
            }
        }
        
        .card-stat {
            background: linear-gradient(45deg, #007bff, #6610f2);
            color: white;
        }
        
        .card-warning {
            background: linear-gradient(45deg, #fd7e14, #ffc107);
            color: white;
        }
        
        .card-success {
            background: linear-gradient(45deg, #198754, #20c997);
            color: white;
        }
        
        .card-danger {
            background: linear-gradient(45deg, #dc3545, #e83e8c);
            color: white;
        }
        
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- Navigation for authenticated users -->
    <% if (user || tenant) { %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-building"></i> Property Management
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <% if (user) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> <%= user.firstName %> <%= user.lastName %>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="/auth/logout" method="POST" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        <% } else if (tenant) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> <%= tenant.firstName %> <%= tenant.lastName %>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/tenant-portal">Portal Home</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="/tenant-auth/logout" method="POST" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    <% } %>

    <!-- Sidebar for managers -->
    <% if (user) { %>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse position-fixed">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/dashboard') ? 'active' : '' %>" href="/dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/properties')) ? 'active' : '' %>" href="/properties">
                                    <i class="fas fa-building"></i> Properties
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/tenants')) ? 'active' : '' %>" href="/tenants">
                                    <i class="fas fa-users"></i> Tenants
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/leases')) ? 'active' : '' %>" href="/leases">
                                    <i class="fas fa-file-contract"></i> Leases
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/invoices')) ? 'active' : '' %>" href="/invoices">
                                    <i class="fas fa-file-invoice"></i> Invoices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/payments')) ? 'active' : '' %>" href="/payments">
                                    <i class="fas fa-credit-card"></i> Payments
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    <% } %>

    <!-- Main content -->
    <main class="<%= user ? 'main-content' : '' %>">
        <div class="px-4 py-3">
            <!-- Flash messages are handled in individual views --> 