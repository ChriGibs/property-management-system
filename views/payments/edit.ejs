<%- include('../partials/header') %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark mb-0">
      <i class="fas fa-edit me-2"></i>Edit Payment #<%= payment.id %>
    </h1>
    <div class="btn-group">
      <a href="/payments/<%= payment.id %>" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Payment
      </a>
      <a href="/payments" class="btn btn-outline-primary">
        <i class="fas fa-list me-2"></i>All Payments
      </a>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Payment Form -->
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Edit Payment Details
          </h5>
        </div>
        <div class="card-body">
          <form action="/payments/<%= payment.id %>" method="POST" id="paymentForm">
            <input type="hidden" name="_method" value="PUT">
            
            <!-- Current Invoice Information -->
            <% if (payment.invoice) { %>
              <div class="alert alert-info mb-4">
                <i class="fas fa-file-invoice me-2"></i>
                <strong>Associated Invoice:</strong> 
                <a href="/invoices/<%= payment.invoice.id %>" class="text-decoration-none">
                  <%= payment.invoice.invoiceNumber %>
                </a>
                - 
                <% if (payment.invoice.lease && payment.invoice.lease.property) { %>
                  <%= payment.invoice.lease.property.name || payment.invoice.lease.property.address %>
                <% } else { %>
                  General Invoice
                <% } %>
                <br>
                <small>Total: $<%= new Intl.NumberFormat().format(payment.invoice.totalAmount) %>, 
                Due: <%= new Date(payment.invoice.dueDate).toLocaleDateString() %></small>
              </div>
            <% } %>

            <!-- Payment Information -->
            <h6 class="text-muted mb-3">
              <i class="fas fa-dollar-sign me-2"></i>Payment Information
            </h6>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="amount" class="form-label">Payment Amount <span class="text-danger">*</span></label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="amount" name="amount" 
                         value="<%= payment.amount %>" placeholder="0.00" step="0.01" min="0.01" required>
                </div>
                <div class="form-text">Cannot exceed invoice balance available at payment time</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="paymentDate" class="form-label">Payment Date <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="paymentDate" name="paymentDate" 
                       value="<%= new Date(payment.paymentDate).toISOString().split('T')[0] %>" required>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="paymentMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
                <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                  <option value="credit_card" <%= payment.paymentMethod === 'credit_card' ? 'selected' : '' %>>Credit Card</option>
                  <option value="bank_transfer" <%= payment.paymentMethod === 'bank_transfer' ? 'selected' : '' %>>Bank Transfer</option>
                  <option value="check" <%= payment.paymentMethod === 'check' ? 'selected' : '' %>>Check</option>
                  <option value="cash" <%= payment.paymentMethod === 'cash' ? 'selected' : '' %>>Cash</option>
                  <option value="money_order" <%= payment.paymentMethod === 'money_order' ? 'selected' : '' %>>Money Order</option>
                  <option value="online" <%= payment.paymentMethod === 'online' ? 'selected' : '' %>>Online Payment</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label for="status" class="form-label">Status <span class="text-danger">*</span></label>
                <select class="form-select" id="status" name="status" required>
                  <option value="pending" <%= payment.status === 'pending' ? 'selected' : '' %>>Pending</option>
                  <option value="completed" <%= payment.status === 'completed' ? 'selected' : '' %>>Completed</option>
                  <option value="failed" <%= payment.status === 'failed' ? 'selected' : '' %>>Failed</option>
                  <option value="cancelled" <%= payment.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="transactionId" class="form-label">Transaction ID</label>
                <input type="text" class="form-control" id="transactionId" name="transactionId" 
                       value="<%= payment.transactionId || '' %>" placeholder="External transaction reference">
                <div class="form-text">Stripe ID, bank reference, etc.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="checkNumber" class="form-label">Check Number</label>
                <input type="text" class="form-control" id="checkNumber" name="checkNumber" 
                       value="<%= payment.checkNumber || '' %>" placeholder="Check number (if applicable)">
              </div>
            </div>

            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="description" 
                       value="<%= payment.description || '' %>" placeholder="Brief description of payment">
              </div>
            </div>

            <!-- Processing Fee -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-credit-card me-2"></i>Processing Details
            </h6>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="processingFee" class="form-label">Processing Fee</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="processingFee" name="processingFee" 
                         value="<%= payment.processingFee || 0 %>" placeholder="0.00" step="0.01" min="0">
                </div>
                <div class="form-text">Fee charged by payment processor</div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="alert alert-info">
                  <i class="fas fa-calculator me-2"></i>
                  <strong>Net Amount:</strong> <span id="netAmount">$<%= new Intl.NumberFormat().format(payment.netAmount || (payment.amount - (payment.processingFee || 0))) %></span>
                  <div class="form-text">Payment amount minus processing fee</div>
                </div>
              </div>
            </div>

            <!-- Processed Date -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="processedAt" class="form-label">Processed Date</label>
                <input type="datetime-local" class="form-control" id="processedAt" name="processedAt" 
                       value="<%= payment.processedAt ? new Date(payment.processedAt).toISOString().slice(0, 16) : '' %>">
                <div class="form-text">Leave blank if not yet processed</div>
              </div>
              <div class="col-md-6 mb-3">
                <% if (payment.refundAmount > 0) { %>
                  <div class="alert alert-warning">
                    <i class="fas fa-undo me-2"></i>
                    <strong>Refund Amount:</strong> $<%= new Intl.NumberFormat().format(payment.refundAmount) %>
                    <% if (payment.refundedAt) { %>
                      <br><small>Refunded: <%= new Date(payment.refundedAt).toLocaleDateString() %></small>
                    <% } %>
                  </div>
                <% } %>
              </div>
            </div>

            <!-- Notes -->
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-sticky-note me-2"></i>Additional Information
            </h6>

            <div class="mb-3">
              <label for="notes" class="form-label">Notes</label>
              <textarea class="form-control" id="notes" name="notes" rows="4" 
                        placeholder="Any additional notes about this payment..."><%= payment.notes || '' %></textarea>
            </div>

            <!-- Warning about invoice impact -->
            <% if (payment.invoice) { %>
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Important:</strong> Changing the payment amount will automatically update the invoice balance 
                and may affect the invoice status (paid, partially paid, etc.).
              </div>
            <% } %>

            <!-- Form Actions -->
            <hr class="my-4">
            <div class="d-flex justify-content-between">
              <div>
                <a href="/payments/<%= payment.id %>" class="btn btn-outline-secondary">
                  <i class="fas fa-times me-2"></i>Cancel
                </a>
                <a href="/payments" class="btn btn-outline-primary ms-2">
                  <i class="fas fa-list me-2"></i>All Payments
                </a>
              </div>
              <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i>Update Payment
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('paymentForm');
  const amountInput = document.getElementById('amount');
  const processingFeeInput = document.getElementById('processingFee');
  const paymentMethodSelect = document.getElementById('paymentMethod');
  const statusSelect = document.getElementById('status');
  const processedAtInput = document.getElementById('processedAt');
  const checkNumberInput = document.getElementById('checkNumber');
  const transactionIdInput = document.getElementById('transactionId');

  // Calculate net amount
  function calculateNetAmount() {
    const amount = parseFloat(amountInput.value) || 0;
    const fee = parseFloat(processingFeeInput.value) || 0;
    const net = Math.max(0, amount - fee);
    
    document.getElementById('netAmount').textContent = 
      `$${net.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
  }

  amountInput.addEventListener('input', calculateNetAmount);
  processingFeeInput.addEventListener('input', calculateNetAmount);

  // Payment method change
  paymentMethodSelect.addEventListener('change', function() {
    const method = this.value;
    
    // Show/hide relevant fields
    if (method === 'check') {
      checkNumberInput.closest('.col-md-6').style.display = 'block';
      transactionIdInput.closest('.col-md-6').style.display = 'none';
    } else if (method === 'cash') {
      checkNumberInput.closest('.col-md-6').style.display = 'none';
      transactionIdInput.closest('.col-md-6').style.display = 'none';
    } else {
      checkNumberInput.closest('.col-md-6').style.display = 'none';
      transactionIdInput.closest('.col-md-6').style.display = 'block';
    }
  });

  // Status change
  statusSelect.addEventListener('change', function() {
    const status = this.value;
    
    // Auto-set processed date for completed payments
    if (status === 'completed' && !processedAtInput.value) {
      const now = new Date();
      processedAtInput.value = now.toISOString().slice(0, 16);
    }
    
    // Clear processed date for non-completed payments
    if (status !== 'completed') {
      processedAtInput.value = '';
    }
  });

  // Form validation
  form.addEventListener('submit', function(e) {
    const amount = parseFloat(amountInput.value);
    if (!amount || amount <= 0) {
      e.preventDefault();
      alert('Please enter a valid payment amount.');
      return;
    }

    const status = statusSelect.value;
    if (status === 'completed' && !processedAtInput.value) {
      if (!confirm('Payment is marked as completed but no processed date is set. Continue anyway?')) {
        e.preventDefault();
        return;
      }
    }

    // Show loading state
    const submitBtn = form.querySelector('button[type="submit"]');
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating Payment...';
    submitBtn.disabled = true;
  });

  // Initial setup
  paymentMethodSelect.dispatchEvent(new Event('change'));
  calculateNetAmount();
});
</script>

<%- include('../partials/footer') %> 