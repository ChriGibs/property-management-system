<%- include('../partials/header') %>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark mb-0">
      <i class="fas fa-credit-card me-2"></i>Payment #<%= payment.id %>
    </h1>
    <div class="btn-group">
      <a href="/payments" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Payments
      </a>
      <a href="/payments/<%= payment.id %>/edit" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Edit Payment
      </a>
      <% if (payment.status === 'completed' && payment.refundAmount === 0) { %>
        <button class="btn btn-warning" onclick="confirmRefund()">
          <i class="fas fa-undo me-2"></i>Process Refund
        </button>
      <% } %>
      <button class="btn btn-outline-danger" onclick="confirmDelete()">
        <i class="fas fa-trash me-2"></i>Delete
      </button>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= messages.success.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= messages.error.join(', ') %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <div class="row">
    <!-- Left Column - Payment Status & Invoice Info -->
    <div class="col-lg-4">
      <!-- Payment Status -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Payment Status
          </h5>
        </div>
        <div class="card-body text-center">
          <span class="badge fs-6 bg-<%= 
            payment.status === 'completed' ? 'success' : 
            payment.status === 'pending' ? 'warning' : 
            payment.status === 'failed' ? 'danger' : 
            payment.status === 'refunded' ? 'secondary' : 
            'light text-dark' 
          %>">
            <%= payment.status.toUpperCase() %>
          </span>
          
          <% if (payment.processedAt) { %>
            <div class="mt-2">
              <small class="text-muted">
                <i class="fas fa-check-circle"></i> 
                Processed: <%= new Date(payment.processedAt).toLocaleDateString() %>
              </small>
            </div>
          <% } %>
          
          <% if (payment.refundedAt) { %>
            <div class="mt-2">
              <small class="text-warning">
                <i class="fas fa-undo"></i> 
                Refunded: <%= new Date(payment.refundedAt).toLocaleDateString() %>
              </small>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Invoice Information -->
      <% if (payment.invoice) { %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-file-invoice me-2"></i>Related Invoice
            </h5>
          </div>
          <div class="card-body">
            <h6>
              <a href="/invoices/<%= payment.invoice.id %>" class="text-decoration-none">
                <%= payment.invoice.invoiceNumber %>
              </a>
            </h6>
            
            <div class="row text-center mb-3">
              <div class="col-6">
                <small class="text-muted">Total</small>
                <div class="fw-bold">$<%= new Intl.NumberFormat().format(payment.invoice.totalAmount) %></div>
              </div>
              <div class="col-6">
                <small class="text-muted">Due Date</small>
                <div class="fw-bold"><%= new Date(payment.invoice.dueDate).toLocaleDateString() %></div>
              </div>
            </div>

            <% if (payment.invoice.lease && payment.invoice.lease.property) { %>
              <div class="border-top pt-3">
                <strong class="text-muted">Property:</strong>
                <div>
                  <a href="/properties/<%= payment.invoice.lease.property.id %>" class="text-decoration-none">
                    <%= payment.invoice.lease.property.name || payment.invoice.lease.property.address %>
                  </a>
                </div>
                <small class="text-muted">
                  <%= payment.invoice.lease.property.city %>, <%= payment.invoice.lease.property.state %>
                </small>
              </div>
            <% } %>

            <!-- Tenants -->
            <% 
              const tenants = [];
              if (payment.invoice.lease) {
                if (payment.invoice.lease.tenant1) tenants.push(payment.invoice.lease.tenant1);
                if (payment.invoice.lease.tenant2) tenants.push(payment.invoice.lease.tenant2);
                if (payment.invoice.lease.tenant3) tenants.push(payment.invoice.lease.tenant3);
                if (payment.invoice.lease.tenant4) tenants.push(payment.invoice.lease.tenant4);
              }
            %>
            
            <% if (tenants.length > 0) { %>
              <div class="border-top pt-3 mt-3">
                <strong class="text-muted">Tenants:</strong>
                <% tenants.forEach((tenant, index) => { %>
                  <div class="d-flex align-items-center mt-2">
                    <div class="avatar-circle bg-primary text-white me-2" style="width: 25px; height: 25px; font-size: 0.7rem;">
                      <%= tenant.firstName.charAt(0) + tenant.lastName.charAt(0) %>
                    </div>
                    <a href="/tenants/<%= tenant.id %>" class="text-decoration-none small">
                      <%= tenant.getFullName() %>
                    </a>
                  </div>
                <% }) %>
              </div>
            <% } %>
            
            <div class="mt-3">
              <a href="/invoices/<%= payment.invoice.id %>" class="btn btn-sm btn-outline-primary w-100">
                <i class="fas fa-external-link-alt me-2"></i>View Invoice
              </a>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="card shadow-sm mb-4">
          <div class="card-body text-center">
            <i class="fas fa-exclamation-circle text-warning mb-2"></i>
            <p class="text-muted mb-0">Invoice information not available</p>
          </div>
        </div>
      <% } %>

      <!-- Quick Actions -->
      <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-tools me-2"></i>Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/payments/<%= payment.id %>/edit" class="btn btn-outline-warning w-100">
              <i class="fas fa-edit me-2"></i>Edit Payment
            </a>
            
            <% if (payment.invoice) { %>
              <a href="/invoices/<%= payment.invoice.id %>" class="btn btn-outline-primary w-100">
                <i class="fas fa-file-invoice me-2"></i>View Invoice
              </a>
            <% } %>
            
            <% if (payment.status === 'completed' && payment.refundAmount === 0) { %>
              <button class="btn btn-outline-warning w-100" onclick="confirmRefund()">
                <i class="fas fa-undo me-2"></i>Process Refund
              </button>
            <% } %>
            
            <button class="btn btn-outline-info w-100" onclick="window.print()">
              <i class="fas fa-print me-2"></i>Print Receipt
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Payment Details -->
    <div class="col-lg-8">
      <!-- Payment Information -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-credit-card me-2"></i>Payment Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong class="text-muted">Payment Date:</strong>
              <div class="h6"><%= new Date(payment.paymentDate).toLocaleDateString() %></div>
            </div>
            <div class="col-md-6 mb-3">
              <strong class="text-muted">Payment Method:</strong>
              <div class="h6">
                <span class="badge bg-light text-dark">
                  <%= payment.paymentMethod.replace('_', ' ').toUpperCase() %>
                </span>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong class="text-muted">Amount:</strong>
              <div class="h4 text-success">$<%= new Intl.NumberFormat().format(payment.amount) %></div>
            </div>
            <div class="col-md-6 mb-3">
              <% if (payment.processingFee > 0) { %>
                <strong class="text-muted">Processing Fee:</strong>
                <div class="h6 text-warning">$<%= new Intl.NumberFormat().format(payment.processingFee) %></div>
                <strong class="text-muted">Net Amount:</strong>
                <div class="h6 text-info">$<%= new Intl.NumberFormat().format(payment.netAmount) %></div>
              <% } %>
            </div>
          </div>

          <% if (payment.refundAmount > 0) { %>
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="alert alert-warning">
                  <i class="fas fa-undo me-2"></i>
                  <strong>Refund Amount:</strong> $<%= new Intl.NumberFormat().format(payment.refundAmount) %>
                  <% if (payment.refundedAt) { %>
                    <br><small>Refunded on: <%= new Date(payment.refundedAt).toLocaleDateString() %></small>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Transaction Details -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-receipt me-2"></i>Transaction Details
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <% if (payment.transactionId) { %>
              <div class="col-md-6 mb-3">
                <strong class="text-muted">Transaction ID:</strong>
                <div class="h6"><%= payment.transactionId %></div>
              </div>
            <% } %>
            
            <% if (payment.checkNumber) { %>
              <div class="col-md-6 mb-3">
                <strong class="text-muted">Check Number:</strong>
                <div class="h6">#<%= payment.checkNumber %></div>
              </div>
            <% } %>
            
            <% if (payment.description) { %>
              <div class="col-md-12 mb-3">
                <strong class="text-muted">Description:</strong>
                <div class="h6"><%= payment.description %></div>
              </div>
            <% } %>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong class="text-muted">Created:</strong>
              <div><%= new Date(payment.createdAt).toLocaleString() %></div>
            </div>
            <div class="col-md-6 mb-3">
              <strong class="text-muted">Last Updated:</strong>
              <div><%= new Date(payment.updatedAt).toLocaleString() %></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <% if (payment.notes) { %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-sticky-note me-2"></i>Notes
            </h5>
          </div>
          <div class="card-body">
            <p class="mb-0"><%= payment.notes %></p>
          </div>
        </div>
      <% } %>

      <!-- Payment History Timeline -->
      <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-history me-2"></i>Payment Timeline
          </h5>
        </div>
        <div class="card-body">
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-marker bg-primary"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Payment Created</h6>
                <p class="text-muted small mb-0">
                  <%= new Date(payment.createdAt).toLocaleString() %>
                </p>
              </div>
            </div>
            
            <% if (payment.processedAt) { %>
              <div class="timeline-item">
                <div class="timeline-marker bg-success"></div>
                <div class="timeline-content">
                  <h6 class="mb-1">Payment Processed</h6>
                  <p class="text-muted small mb-0">
                    <%= new Date(payment.processedAt).toLocaleString() %>
                  </p>
                </div>
              </div>
            <% } %>
            
            <% if (payment.refundedAt) { %>
              <div class="timeline-item">
                <div class="timeline-marker bg-warning"></div>
                <div class="timeline-content">
                  <h6 class="mb-1">Payment Refunded</h6>
                  <p class="text-muted small mb-0">
                    Amount: $<%= new Intl.NumberFormat().format(payment.refundAmount) %><br>
                    <%= new Date(payment.refundedAt).toLocaleString() %>
                  </p>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Process Refund</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/payments/<%= payment.id %>/refund" method="POST">
        <div class="modal-body">
          <p>Process a refund for this payment?</p>
          <div class="alert alert-info">
            <strong>Payment Amount:</strong> $<%= new Intl.NumberFormat().format(payment.amount) %>
          </div>
          
          <div class="mb-3">
            <label for="refundAmount" class="form-label">Refund Amount</label>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <input type="number" class="form-control" id="refundAmount" name="refundAmount" 
                     value="<%= payment.amount %>" step="0.01" min="0.01" max="<%= payment.amount %>">
            </div>
            <div class="form-text">Enter amount to refund (max: $<%= new Intl.NumberFormat().format(payment.amount) %>)</div>
          </div>
          
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            This action will update the related invoice balance and cannot be undone.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">
            <i class="fas fa-undo me-2"></i>Process Refund
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this payment?</p>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <strong>Amount:</strong> $<%= new Intl.NumberFormat().format(payment.amount) %><br>
          <strong>Date:</strong> <%= new Date(payment.paymentDate).toLocaleDateString() %>
        </div>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-triangle me-2"></i>
          This action cannot be undone. The payment will be permanently removed and invoice balances will be updated.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/payments/<%= payment.id %>" method="POST" style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete Payment
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
.timeline {
  position: relative;
  padding-left: 30px;
}

.timeline-item {
  position: relative;
  padding-bottom: 20px;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: -19px;
  top: 20px;
  height: calc(100% - 10px);
  width: 2px;
  background-color: #dee2e6;
}

.timeline-marker {
  position: absolute;
  left: -25px;
  top: 5px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid white;
  box-shadow: 0 0 0 2px #dee2e6;
}

.timeline-content h6 {
  margin-bottom: 5px;
  font-weight: 600;
}
</style>

<script>
function confirmRefund() {
  new bootstrap.Modal(document.getElementById('refundModal')).show();
}

function confirmDelete() {
  new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>

<%- include('../partials/footer') %> 